{
    "name": "example-segm",
    "cudnn": {
        "benchmark": false,
        "deterministic": true
    },
    "datasets": {
        "pascalvoc": {
            "type": "thelper.data.PASCALVOC",
            "params": {
                "root": "data/pascalvoc",
                "task": "segm",
                "subset": "trainval",
                "download": true,
                "preload": false
            }
        }
    },
    "loaders": {
        "batch_size": 6,
        "train_shuffle": true,
        "valid_shuffle": true,
        "valid_seed": 0,
        "test_seed": 0,
        "torch_seed": 0,
        "numpy_seed": 0,
        "random_seed": 0,
        "workers": 0,
        "pin_memory": false,
        "drop_last": false,
        "train_augments": {
            "append": false,
            "transforms": [
                {
                    "operation": "Augmentor.Pipeline",
                    "params": {
                        "flip_left_right": {"probability": 0.5}
                    },
                    "target_key": ["image", "label_map"]
                }
            ]
        },
        "base_transforms": [
            {
                "operation": "thelper.transforms.CenterCrop",
                "params": {
                    "size": [512, 512],
                    "borderval": 255
                },
                "target_key": ["image", "label_map"]
            },
            {
                "operation": "thelper.transforms.NormalizeMinMax",
                "params": {
                    "min": [127, 127, 127],
                    "max": [255, 255, 255]
                },
                "target_key": "image"
            },
            {
                "operation": "torchvision.transforms.ToTensor",
                "target_key": "image"
            }
        ],
        "train_split": {
            "pascalvoc": 0.9
        },
        "valid_split": {
            "pascalvoc": 0.1
        }
    },
    "model": {
        "type" : "thelper.nn.fcn.FCN32s"
    },
    "trainer": {
        "device": "cuda:all",
        "epochs": 50,
        "save_freq": 5,
        "monitor": "accuracy",
        "use_tbx": true,
        "display_train_predictions": false,
        "callback_kwargs": {},
        "optimization": {
            "loss": {
                "type": "torch.nn.CrossEntropyLoss",
                "weight_distribution": {
                    "background": 0.1
                }
            },
            "optimizer": {
                "type": "torch.optim.Adam",
                "params": {
                    "lr": 1e-4,
                    "weight_decay": 1e-6
                }
            },
            "scheduler": {
                "type": "torch.optim.lr_scheduler.ReduceLROnPlateau",
                "params": {
                    "mode": "max",
                    "factor": 0.1,
                    "patience": 8,
                    "verbose": true,
                    "threshold": 0.0001,
                    "threshold_mode": "rel"
                },
                "step_metric": "accuracy"
            }
        },
        "metrics": {
            "accuracy": {
                "type": "thelper.optim.CategoryAccuracy",
                "params": {
                    "top_k": 1
                }
            }
        }
    }
}
